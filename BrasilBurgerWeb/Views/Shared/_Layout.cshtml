<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brasil Burger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Catalogue" asp-action="Index">
                    🍔 Brasil Burger
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Catalogue" asp-action="Index">
                                Catalogue
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button"
                                    data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    @Context.Session.GetString("UserPrenom")
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Commande" asp-action="MesCommandes">
                                            <i class="bi bi-bag-check"></i> Mes commandes
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i> Déconnexion
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Auth" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Sign in
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Notifications TempData -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle-fill"></i> @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <div class="container">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top text-muted">
            <div class="container">
                <div class="row py-4">
                    <div class="col-md-4">
                        <h5 class="text-white">🍔 Brasil Burger</h5>
                        <p class="text-light">
                            Le meilleur burger de Dakar !<br>
                            Commandez en ligne et faites-vous livrer.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-white">Navigation</h6>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Catalogue" asp-action="Index"
                                    class="text-light text-decoration-none">Catalogue</a></li>
                            <li><a asp-controller="Auth" asp-action="Login"
                                    class="text-light text-decoration-none">Connexion</a></li>
                            <li><a asp-controller="Auth" asp-action="Register"
                                    class="text-light text-decoration-none">Inscription</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-white">Contact</h6>
                        <p class="text-light">
                            <i class="bi bi-telephone"></i> +221 77 123 45 67<br>
                            <i class="bi bi-envelope"></i> contact@brasilburger.com<br>
                            <i class="bi bi-geo-alt"></i> Dakar, Sénégal
                        </p>
                    </div>
                </div>
                <div class="text-center py-3 border-top border-secondary">
                    <p class="mb-0 text-light">
                        &copy; 2024 Brasil Burger - Projet L3 ISM |
                        <a href="https://www.github.com" target="_blank" class="text-light">
                            <i class="bi bi-github"></i> GitHub
                        </a>
                    </p>
                </div>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>