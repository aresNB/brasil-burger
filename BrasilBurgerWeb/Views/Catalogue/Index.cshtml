@model IEnumerable<BrasilBurgerWeb.Models.Burger>


@{
    ViewData["Title"] = "Catalogue";
}

<div class="container mt-4">
    <h2 class="mb-4">Catalogue des burgers</h2>

    <div class="row">
        @foreach (var burger in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(burger.ImageUrl))
                    {
                        <img src="@burger.ImageUrl" class="card-img-top" alt="@burger.Libelle">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@burger.Libelle</h5>
                        <p class="text-primary fw-bold">
                            @burger.Prix.ToString("N0") FCFA
                        </p>

                        <a asp-action="Details" asp-route-id="@burger.Id" class="btn btn-danger w-100">
                            Voir d√©tails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>