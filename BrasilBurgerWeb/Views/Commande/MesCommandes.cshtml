@model IEnumerable<BrasilBurgerWeb.Models.Commande>

@{
    ViewData["Title"] = "Mes commandes";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">
        <i class="bi bi-bag-check"></i> Mes commandes
    </h2>

    @if (Model.Any())
    {
        @foreach (var commande in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>
                                Commande #@commande.NumeroCommande
                                @{
                                    var badgeClass = commande.Etat switch
                                    {
                                        "EN_ATTENTE" => "bg-warning",
                                        "VALIDEE" => "bg-success",
                                        "EN_PREPARATION" => "bg-info",
                                        "TERMINEE" => "bg-primary",
                                        "EN_LIVRAISON" => "bg-info",
                                        "LIVREE" => "bg-success",
                                        "ANNULEE" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@commande.Etat</span>
                            </h5>
                            <p class="text-muted mb-1">
                                <i class="bi bi-calendar"></i>
                                @commande.DateCommande.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-box-seam"></i>
                                @commande.ModeConsommation.Replace("_", " ")
                            </p>
                            @if (commande.LignesCommande != null)
                            {
                                <p class="text-muted small">
                                    @commande.LignesCommande.Count produit(s)
                                </p>
                            }
                        </div>
                        <div class="col-md-4 text-end">
                            <h4 class="text-danger">@commande.MontantTotal.ToString("N0") FCFA</h4>
                            <a asp-action="Details" asp-route-id="@commande.Id" class="btn btn-outline-danger">
                                <i class="bi bi-eye"></i> Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Vous n'avez pas encore passé de commande.
            <a asp-controller="Catalogue" asp-action="Index" class="alert-link">
                Découvrir notre catalogue
            </a>
        </div>
    }
</div>
