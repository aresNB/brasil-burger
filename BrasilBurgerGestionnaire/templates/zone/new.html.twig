{% extends 'base.html.twig' %}

{% block title %}Nouvelle zone
{% endblock %}
{% block page_title %}Créer une nouvelle zone
{% endblock %}

{% block body %}
	<!-- Breadcrumb -->
	<nav aria-label="breadcrumb" class="mb-4">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_zone_index') }}">Zones</a>
			</li>
			<li class="breadcrumb-item active">Nouvelle</li>
		</ol>
	</nav>

	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header bg-white">
					<h5 class="mb-0">
						<i class="bi bi-plus-circle"></i>
						Nouvelle zone de livraison
					</h5>
				</div>
				<div class="card-body">
					<form method="post" action="{{ path('app_zone_new') }}">
						<input type="hidden" name="_token" value="{{ csrf_token('create_zone') }}">

						<div class="mb-3">
							<label for="nom" class="form-label">Nom de la zone
								<span class="text-danger">*</span>
							</label>
							<input type="text" class="form-control" id="nom" name="nom" required placeholder="Ex: Plateau, Mermoz, Sicap...">
							<small class="form-text text-muted">Le nom doit être unique</small>
						</div>

						<div class="mb-3">
							<label for="prix_livraison" class="form-label">Prix de livraison (FCFA)
								<span class="text-danger">*</span>
							</label>
							<input type="number" class="form-control" id="prix_livraison" name="prix_livraison" required min="0" step="100" placeholder="Ex: 1000">
						</div>

						<div class="mb-4">
							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" id="actif" name="actif" value="1" checked>
								<label class="form-check-label" for="actif">
									Zone active (les clients pourront commander)
								</label>
							</div>
						</div>

						<div class="alert alert-info">
							<i class="bi bi-info-circle"></i>
							<small>Après avoir créé la zone, vous pourrez y ajouter des quartiers.</small>
						</div>

						<div class="d-flex gap-2">
							<button type="submit" class="btn btn-danger">
								<i class="bi bi-check-circle"></i>
								Créer la zone
							</button>
							<a href="{{ path('app_zone_index') }}" class="btn btn-outline-secondary">
								<i class="bi bi-x-circle"></i>
								Annuler
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
