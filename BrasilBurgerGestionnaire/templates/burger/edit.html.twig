{% extends 'base.html.twig' %}

{% block title %}Modifier le burger
{% endblock %}
{% block page_title %}Modifier "{{ burger.libelle }}"
{% endblock %}

{% block body %}
	<!-- Breadcrumb -->
	<nav aria-label="breadcrumb" class="mb-4">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('app_burger_index') }}">Burgers</a>
			</li>
			<li class="breadcrumb-item active">Modifier</li>
		</ol>
	</nav>

	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header bg-white">
					<h5 class="mb-0">
						<i class="bi bi-pencil"></i>
						Modifier le burger
					</h5>
				</div>
				<div class="card-body">
					<form method="post" action="{{ path('app_burger_edit', {id: burger.id}) }}" enctype="multipart/form-data">
						<input
						type="hidden" name="_token" value="{{ csrf_token('edit_burger_' ~ burger.id) }}">

						<!-- Image actuelle -->
						{% if burger.imageUrl %}
							<div class="mb-3 text-center">
								<label class="form-label d-block">Image actuelle :</label>
								<img src="{{ burger.imageUrl }}" alt="{{ burger.libelle }}" class="img-thumbnail" style="max-height: 200px;">
							</div>
						{% endif %}

						<div class="mb-3">
							<label for="libelle" class="form-label">Nom du burger
								<span class="text-danger">*</span>
							</label>
							<input type="text" class="form-control" id="libelle" name="libelle" value="{{ burger.libelle }}" required>
						</div>

						<div class="mb-3">
							<label for="description" class="form-label">Description</label>
							<textarea class="form-control" id="description" name="description" rows="3">{{ burger.description }}</textarea>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								<label for="prix" class="form-label">Prix (FCFA)
									<span class="text-danger">*</span>
								</label>
								<input type="number" class="form-control" id="prix" name="prix" value="{{ burger.prix }}" required min="0" step="100">
							</div>

							<div class="col-md-6 mb-3">
								<label for="categorie_id" class="form-label">Cat√©gorie</label>
								<select class="form-select" id="categorie_id" name="categorie_id">
									<option value="">-- Aucune --</option>
									{% for categorie in categories %}
										<option value="{{ categorie.id }}" {% if burger.categorie and burger.categorie.id == categorie.id %} selected {% endif %}>
											{{ categorie.nom }}
										</option>
									{% endfor %}
								</select>
							</div>
						</div>

						<div class="mb-4">
							<label for="image" class="form-label">Changer l'image</label>
							<input type="file" class="form-control" id="image" name="image" accept="image/jpeg,image/png,image/jpg">
							<small class="form-text text-muted">Laissez vide pour conserver l'image actuelle</small>
						</div>

						<div class="d-flex gap-2">
							<button type="submit" class="btn btn-danger">
								<i class="bi bi-check-circle"></i>
								Enregistrer
							</button>
							<a href="{{ path('app_burger_index') }}" class="btn btn-outline-secondary">
								<i class="bi bi-x-circle"></i>
								Annuler
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
